<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <!--统计图区域-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/unit_top">
        <!--折线统计图-->
        <RelativeLayout
            android:id="@+id/rl_build_01"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp">
        </RelativeLayout>
        >
        <!--蜘蛛网统计图-->
        <RelativeLayout
            android:id="@+id/rl_build_02"
            android:layout_width="350dp"
            android:layout_height="230dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp">
            <com.anhubo.anhubo.view.MyPolygonView
                android:id="@+id/polygon_build"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>>

        <TextView
            android:id="@+id/tv_build_frag_02_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="16dp"
            android:enabled="true"
            android:text="完善信息完善>>"
            android:textColor="@color/tv_gray"
            android:textSize="16sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_build_frag_02_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="16dp"
            android:enabled="true"
            android:text="测试>>"
            android:textColor="@color/tv_gray"
            android:textSize="16sp"
            android:visibility="gone"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_bili"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:text="本建筑单位三色预警比例"
                android:textColor="@color/gray"
                android:textSize="16sp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <View
                        android:id="@+id/view_build_red"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_above="@+id/tv_build_low"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/dot_red_shape"/>

                    <TextView
                        android:id="@+id/tv_build_lowNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/tv_build_low"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/view_build_red"
                        android:text="21"
                        android:textSize="30sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/tv_build_low"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/tv_build_lowNum"
                        android:text="%"
                        android:textSize="20sp"/>

                    <TextView
                        android:id="@+id/tv_build_low"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="center_horizontal"
                        android:text="安全级别低"
                        android:textColor="@color/tv_gray"
                        android:textSize="14sp"
                        />

                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <View
                        android:id="@+id/view_build_yellow"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_above="@+id/tv_build_middle"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/dot_yellow_shape"/>

                    <TextView
                        android:id="@+id/tv_build_middleNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/tv_build_middle"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/view_build_yellow"
                        android:text="29"
                        android:textSize="30sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/tv_build_middle"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/tv_build_middleNum"
                        android:text="%"
                        android:textSize="20sp"/>

                    <TextView
                        android:id="@+id/tv_build_middle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="center_horizontal"
                        android:text="安全级别中"
                        android:textColor="@color/tv_gray"
                        android:textSize="14sp"
                        />
                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <View
                        android:id="@+id/view_build_green"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_above="@+id/tv_build_heigh"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/dot_green_shape"/>

                    <TextView
                        android:id="@+id/tv_build_heighNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/tv_build_heigh"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/view_build_green"
                        android:text="50"
                        android:textSize="30sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/tv_build_heigh"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/tv_build_heighNum"
                        android:text="%"
                        android:textSize="20sp"/>

                    <TextView
                        android:id="@+id/tv_build_heigh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="center_horizontal"
                        android:text="安全级别高"
                        android:textColor="@color/tv_gray"
                        android:textSize="14sp"
                        />

                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
