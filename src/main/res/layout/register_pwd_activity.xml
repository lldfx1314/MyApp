<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/reg_login_bg"
    android:orientation="vertical"
    android:padding="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/anhuboicon" />
    </LinearLayout>
    <!-- 输入密码 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center">

        <EditText
            android:id="@+id/et_pwdReg1"
            style="@style/reg_login_edit_style"
            android:background="@drawable/edit_text"
            android:hint="请输入密码"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btn_pwdRegX1"
            style="@style/btn_etPhoneNumber"
            android:layout_marginRight="50dp" />

        <Button
            android:id="@+id/btn_pwdReg1"
            style="@style/btn_eye" />
    </RelativeLayout>
    <!--请再次输入密码-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center">

        <EditText
            android:id="@+id/et_pwdReg2"
            style="@style/reg_login_edit_style"
            android:background="@drawable/edit_text"
            android:hint="请再次输入密码"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btn_pwdRegX2"
            style="@style/btn_etPhoneNumber"
            android:layout_marginRight="50dp" />

        <Button
            android:id="@+id/btn_pwdReg2"
            style="@style/btn_eye" />
    </RelativeLayout>
    <!--登录-->
    <Button
        android:id="@+id/btn_pwdRegister"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_reg_login"
        android:text="登录"
        android:textColor="@color/btn_blue"
        android:textSize="16sp" />

</LinearLayout>