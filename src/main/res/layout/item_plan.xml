<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_planName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="计划名称"
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_planStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="筹备期"
            android:textColor="@color/gray"
            android:textSize="14sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp">

        <!--最高保障金-->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="98dp"
            android:layout_alignParentLeft="true">

            <RelativeLayout
                android:id="@+id/rl_heigh_security"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:background="@drawable/three_colour"
                android:padding="5dp">

                <TextView
                    android:id="@+id/three_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="0"
                    android:textColor="@color/backgroud_white"
                    android:textSize="28sp" />

                <!--<ImageView-->
                <!--android:visibility="gone"-->
                <!--android:id="@+id/iv_heigh_security"-->
                <!--android:layout_width="20dp"-->
                <!--android:layout_height="20dp"-->
                <!--android:layout_alignParentBottom="true"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:layout_marginBottom="10dp"-->
                <!--android:background="@drawable/heigh_security_gray"-->
                <!--/>-->
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="上次三色评分"
                android:textColor="@color/gray"
                android:textSize="14sp" />
        </RelativeLayout>

        <!--最高分摊额-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="98dp"
            android:layout_centerInParent="true">

            <RelativeLayout
                android:id="@+id/rl_heigh_sharing"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:background="@drawable/heigh_help_money"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="25dp"
                    android:text="x"
                    android:textColor="@color/black1"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/heigh_help_m_proportion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="0"
                    android:textColor="@color/backgroud_white"
                    android:textSize="28sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="25dp"
                    android:text="%"
                    android:textColor="@color/black1"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/heigh_help_m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="2dp"
                    android:textColor="@color/black1"
                    android:textSize="15sp" />

                <!--<ImageView-->
                <!--android:visibility="gone"-->
                <!--android:id="@+id/iv_heigh_sharing"-->
                <!--android:layout_width="20dp"-->
                <!--android:layout_height="20dp"-->
                <!--android:layout_alignParentBottom="true"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:layout_marginBottom="10dp"-->
                <!--android:background="@drawable/heigh_sharing_gray"-->
                <!--/>-->
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="最高互助额"
                android:textColor="@color/gray"
                android:textSize="14sp" />
        </RelativeLayout>
        <!--预付保障金-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="98dp"
            android:layout_alignParentRight="true">

            <RelativeLayout
                android:id="@+id/rl_prepay_money"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:background="@drawable/heigh_share_money"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="25dp"
                    android:text="x"
                    android:textColor="@color/black1"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/prepay_m_proportion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="0"
                    android:textColor="@color/backgroud_white"
                    android:textSize="28sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="25dp"
                    android:text="%"
                    android:textColor="@color/black1"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/prepay_share_m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="2dp"
                    android:textColor="@color/black1"
                    android:textSize="15sp" />


            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="单次分摊额"
                android:textColor="@color/gray"
                android:textSize="14sp" />
        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>