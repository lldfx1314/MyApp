<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/reg_login_bg"
              android:orientation="vertical"
              android:padding="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/anhuboicon"/>
    </LinearLayout>
    <!-- 手机号码 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <EditText
            android:id="@+id/et_pwdLogin_phone"
            style="@style/reg_login_edit_style"
            android:background="@drawable/edit_text"
            android:hint="请输入手机号码"
            android:inputType="phone"
            />

        <Button
            android:id="@+id/btn_pwdLogin_phone"
            style="@style/btn_etPhoneNumber"/>
    </RelativeLayout>
    <!--输入密码-->
    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <EditText
            android:id="@+id/et_pwdLogin_pwd"
            style="@style/reg_login_edit_style"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:background="@drawable/edit_text"
            />

        <Button
            android:id="@+id/btn_pwdLogin_pwd"
            style="@style/btn_eye"/>
        <Button
            android:id="@+id/btn_pwdLogin_pwdx"
            style="@style/btn_etPhoneNumber"
            android:layout_marginRight="50dp"
            />
    </RelativeLayout>
    <!--登录-->
    <Button
        android:id="@+id/btn_loginPwd"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_reg_login"
        android:text="登录"
        android:textColor="@color/btn_blue"
        android:textSize="20sp"/>

</LinearLayout>