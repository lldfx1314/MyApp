<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_bili"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:text="本建筑单位三色预警比例"
        android:textColor="@color/gray"
        android:textSize="16sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/rl_build_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_vertical">

                <View
                    android:id="@+id/view_build_red"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_above="@+id/tv_build_low"
                    android:layout_marginBottom="8dp"

                    android:background="@drawable/dot_red_shape"/>

                <TextView
                    android:id="@+id/tv_build_lowNum"
                    android:layout_width="52dp"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/tv_build_low"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/view_build_red"
                    android:text="00"
                    android:textSize="30sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/tv_build_low"
                    android:layout_marginBottom="3dp"
                    android:layout_toRightOf="@+id/tv_build_lowNum"
                    android:text="%"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/tv_build_low"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="安全级别低"
                    android:textColor="@color/tv_gray"
                    android:textSize="14sp"/>

            </RelativeLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/rl_build_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:paddingLeft="5dp">

                <View
                    android:id="@+id/view_build_yellow"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_above="@+id/tv_build_middle"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/dot_yellow_shape"/>

                <TextView
                    android:id="@+id/tv_build_middleNum"
                    android:layout_width="52dp"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/tv_build_middle"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/view_build_yellow"
                    android:text="00"
                    android:textSize="30sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/tv_build_middle"
                    android:layout_marginBottom="3dp"
                    android:layout_toRightOf="@+id/tv_build_middleNum"
                    android:text="%"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/tv_build_middle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="安全级别中"
                    android:textColor="@color/tv_gray"
                    android:textSize="14sp"/>
            </RelativeLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/rl_build_03"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:paddingLeft="5dp">

                <View
                    android:id="@+id/view_build_green"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_above="@+id/tv_build_heigh"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/dot_green_shape"/>

                <TextView
                    android:id="@+id/tv_build_heighNum"
                    android:layout_width="52dp"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/tv_build_heigh"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/view_build_green"
                    android:text="00"
                    android:textSize="30sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/tv_build_heigh"
                    android:layout_marginBottom="3dp"
                    android:layout_toRightOf="@+id/tv_build_heighNum"
                    android:text="%"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/tv_build_heigh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="安全级别高"
                    android:textColor="@color/tv_gray"
                    android:textSize="14sp"/>

            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/tv_shap_bottom"/>


        <TextView
            android:id="@+id/red"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/tv_shap_red1"/>

        <TextView
            android:id="@+id/yellow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/tv_shap_yellow"/>


        <TextView
            android:id="@+id/green"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/tv_shap_green2"/>


    </LinearLayout>
</LinearLayout>


