<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/reg_login_bg"
    android:orientation="vertical"
    android:padding="25dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/anhuboicon"/>
    </LinearLayout>
    <!-- 手机号码 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <EditText
            android:id="@+id/et_alterPwd_phoneNumber"
            style="@style/reg_login_edit_style"
            android:hint="请输入手机号码"
            android:inputType="phone"
            android:maxLength="11"
            android:background="@drawable/edit_text"
            />
        <Button
            android:id="@+id/btn_alterPwd_phoneNumber"
            style="@style/btn_etPhoneNumber"/>
    </RelativeLayout>
    <!-- 验证码 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_alterPwd_security"
            style="@style/reg_login_edit_style"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="4"
            android:background="@drawable/edit_text"
            android:hint="请输入验证码"
            />
        <TextView
            android:id="@+id/tv_alterPwd_security"
            android:layout_marginLeft="15dp"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:enabled="true"
            android:textColor="@color/blue"
            android:background="@drawable/text_view_security"
            android:text="获取验证码"/>
    </LinearLayout>

    <!--输入密码-->
    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <EditText
            android:id="@+id/et_alterPwd1"
            style="@style/reg_login_edit_style"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:background="@drawable/edit_text"
            />
        <Button
            android:id="@+id/btn_alterPwdIsVisible1"
            style="@style/btn_eye"/>
        <Button
            android:id="@+id/btn_alterPwdX1"
            style="@style/btn_etPhoneNumber"
            android:layout_marginRight="50dp"
            />
    </RelativeLayout>
    <!--二次输入密码-->
    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <EditText
            android:id="@+id/et_alterPwd2"
            style="@style/reg_login_edit_style"
            android:hint="请再次输入密码"
            android:inputType="textPassword"
            android:background="@drawable/edit_text"
            />

        <Button
            android:id="@+id/btn_alterPwdIsVisible2"
            style="@style/btn_eye"/>
        <Button
            android:id="@+id/btn_alterPwdX2"
            style="@style/btn_etPhoneNumber"
            android:layout_marginRight="50dp"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_alterPwd"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/btn_reg_login"
        android:textColor="@color/btn_blue"
        android:textSize="16sp"
        android:text="发送"/>


</LinearLayout>