<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.anhubo.anhubo">

    <uses-sdk android:minSdkVersion="10" />
    <!-- NFC权限声明 -->
    <uses-permission android:name="android.permission.NFC" />
    <!-- 限制NFC的安装设备 -->
    <uses-feature
        android:name="android.hardware.nfc"
        android:required="true" />
    <!--添加拍照和读写卡的权限-->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!--二维码扫描权限-->
    <!-- <uses-permission android:name="android.permission.CAMERA"/>-->
    <!--震动权限-->
    <uses-permission android:name="android.permission.VIBRATE" />
    <!--打开摄像头灯的权限-->
    <uses-permission android:name="android.permission.FLASHLIGHT" />


    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".ui.activity.HomeActivity"></activity>
        <!--Nfc扫描界面-->
        <activity android:name=".ui.activity.unitDetial.NfcScanActivity">
            <intent-filter>
                <action android:name="android.nfca.action.NDEF_DISCOVERED" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="mime/type" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.nfc.action.TECH_DISCOVERED" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.nfc.action.TECH_DISCOVERED"
                android:resource="@xml/nfc_tech_filter" />
            <intent-filter>
                <action android:name="android.nfc.action.TAG_DISCOVERED" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.unitDetial.Check_Device_Activity"
            android:theme="@style/progress_dialog_theme" />
        <!--登录注册-->
        <activity android:name=".ui.activity.Login_Register.RegisterActivity" />
        <activity android:name=".ui.activity.Login_Register.RegisterActivity2" />
        <activity android:name=".ui.activity.Login_Register.PwdRegisterActivity" />
        <activity android:name=".ui.activity.Login_Register.AnhubaoDeal" />
        <activity android:name=".ui.activity.Login_Register.Login_Pwd" />
        <activity android:name=".ui.activity.Login_Register.Login_Message" />

        <!--单位界面-->
        <activity android:name=".ui.activity.unitDetial.Add_Device_Activity" />
        <activity android:name=".ui.activity.unitDetial.DeviceName_Activity" />
        <activity android:name=".ui.activity.unitDetial.Unit2Study" />
        <activity android:name=".ui.activity.unitDetial.UnitMenuActivity" />
        <activity android:name=".ui.activity.unitDetial.MsgPerfectActivity" />
        <activity android:name=".ui.activity.unitDetial.UploadingActivity1" />
        <activity android:name=".ui.activity.unitDetial.UploadingActivity2" />
        <activity android:name=".ui.activity.unitDetial.UploadingActivity3" />
        <activity android:name=".ui.activity.unitDetial.UploadingActivity4" />
        <activity android:name=".ui.activity.unitDetial.UnitMsgCenterActivity" />
        <activity android:name=".ui.activity.unitDetial.QrScanActivity" />
        <activity android:name=".ui.activity.unitDetial.DeviceList" />

        <!--建筑界面-->
        <activity android:name=".ui.activity.buildDetial.Build_CltMsgActivity"></activity>
        <!--欢迎界面-->
        <activity android:name=".ui.activity.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>