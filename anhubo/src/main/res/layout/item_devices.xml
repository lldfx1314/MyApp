<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="60dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_devices"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="哈哈哈"
            android:textColor="@color/hanzi8_black"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_devices_judege"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@drawable/fuxuan_input02" />

        <Button
            android:id="@+id/btn_devices_del"
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:focusable="false"
            android:clickable="true"
            android:background="@drawable/btn_shap_red"
            android:text="删除"
            android:textColor="#FD4646"
            android:textSize="10sp" />


</LinearLayout>